{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "./packages",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "stadium": ["stadium"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "next.config.js"
  ]
}
